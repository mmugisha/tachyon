<div class="booyah-box col-xs-7 col-xs-offset-1">
	<% if !flash.empty? %>
		<%= render 'shared/flashmessages', flash: flash %>
	<% end %>
	<h2> Enter your details below </h2>
		<%= simple_form_for @message, url: contact_path do |f| %>
			<%= f.input :name %>
			<%= f.input :email %>
			<%= f.input :description, :label=>"Brief comment"%>
			<br />	
			<%= f.submit 'Request Demo', :class=>'btn btn-success' %>		
		<% end %>
</div>

